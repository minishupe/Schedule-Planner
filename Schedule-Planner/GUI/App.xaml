<Application x:Class="Schedule_Planner.GUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Schedule_Planner"
             StartupUri="GUI\MainWindow.xaml">
    <Application.Resources>
        <!-- STYLES -->
        <Style x:Key="Toolbar" TargetType="StackPanel">
            <Setter Property="Background" Value="#2D2D2D" />
        </Style>
        <Style TargetType="Grid">
            <Setter Property="Background" Value="#1E1E1E" />
        </Style>
        <Style x:Key="NavPane" TargetType="Border">
            <Setter Property="Background" Value="#2D2D2D" />
            <Setter Property="BorderBrush" Value="#4A4A4A" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
        
        
        
    </Application.Resources>
</Application>
